rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for Admin custom claim
    function isAdmin() {
      return request.auth != null && request.auth.token.isAdmin == true;
    }

    // Activity Logs: Only admins can read. Writes are server-side via Admin SDK.
    match /activityLogs/{logId} {
      allow read, write: if isAdmin();
    }

    // Categories: Public can read, Admins can create/update/delete.
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Customers: Public can create. Admins can read/update.
    // Users cannot read other users' data.
    match /customers/{customerId} {
        allow create: if true;
        allow read, update, delete: if isAdmin();
    }

    // Menu Items: Public can read. Admins can write.
    match /menuItems/{itemId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Messages: Public can create. Admins can read/update/delete.
    match /messages/{messageId} {
        allow create: if true;
        allow read, update, delete: if isAdmin();
    }
    
    // Orders: Public can create. Admins can read/update.
    // Users cannot read other users' orders.
    match /orders/{orderId} {
        allow create: if true;
        allow read, update, delete: if isAdmin();
    }
    
    // Payments: Public can create. Admins can read/update.
    // Users cannot read other users' payments.
    match /payments/{paymentId} {
        allow create: if true;
        allow read, update, delete: if isAdmin();
    }
    
    // Ratings: Public can create. Admins can read/delete.
    match /ratings/{ratingId} {
        allow create: if true;
        allow read, delete: if isAdmin();
    }

    // Settings: Public can read. Admins can write.
    match /settings/app {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Visitors: Public can create. Admins can read/delete.
    match /visitors/{visitorId} {
      allow create: if true;
      allow read, delete: if isAdmin();
    }
  }
}
