rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin privileges
    function isAdmin() {
      return request.auth != null && request.auth.token.isAdmin == true;
    }

    // Public Collections
    match /menuItems/{menuItemId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /visitors/{visitorId} {
      // Anyone can create a visitor record (on checkout start) or check for an existing one.
      allow read, create: if true;
      allow update, delete: if isAdmin();
    }

    match /customers/{customerId} {
        // Anyone can create a customer record or check for an existing one.
        allow read, create: if true;
        allow update, delete: if isAdmin();
    }

    match /orders/{orderId} {
      // Anyone can create an order.
      allow create: if true;
      // Only admins can view, update, or delete orders.
      allow read, update, delete: if isAdmin();
    }

    match /payments/{paymentId} {
      // Anyone can create a payment record.
      allow create: if true;
      // Only admins can read, update, or delete payments.
      allow read, update, delete: if isAdmin();
    }

    match /messages/{messageId} {
      // Anyone can send a message.
      allow create: if true;
      // Only admins can read or delete them.
      allow read, update, delete: if isAdmin();
    }
    
    match /ratings/{ratingId} {
      // Anyone can submit a rating.
      allow create: if true;
      // Only admins can read or delete them.
      allow read, update, delete: if isAdmin();
    }

    // Settings
    match /settings/app {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // Activity Logs - Only accessible by admins
    match /activityLogs/{logId} {
      allow read, write: if isAdmin();
    }
  }
}
