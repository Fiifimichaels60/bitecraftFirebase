rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow public read for general app data
    match /menuItems/{document=**} {
      allow read: if true;
      allow write: if request.auth.token.isAdmin == true;
    }
    
    match /categories/{document=**} {
      allow read: if true;
      allow write: if request.auth.token.isAdmin == true;
    }
    
    match /settings/app {
        allow read: if true;
        allow write: if request.auth.token.isAdmin == true;
    }

    // Allow users to create orders, customers, payments, messages, ratings and visitor logs
    match /orders/{orderId} {
      allow create: if true;
      allow read, update, delete: if request.auth.token.isAdmin == true;
    }

    match /customers/{customerId} {
      allow create: if true;
      allow read, update, delete: if request.auth.token.isAdmin == true;
    }

    match /payments/{paymentId} {
      allow create: if true;
      allow read, update, delete: if request.auth.token.isAdmin == true;
    }
    
    match /visitors/{visitorId} {
        allow create: if true;
        allow read, update, delete: if request.auth.token.isAdmin == true;
    }
    
    match /messages/{messageId} {
        allow create: if true;
        allow read, update, delete: if request.auth.token.isAdmin == true;
    }
    
    match /ratings/{ratingId} {
        allow create: if true;
        allow read, update, delete: if request.auth.token.isAdmin == true;
    }
    
    // Secure activity logs to only be writeable by server/admin
    // and readable by admins.
    match /activityLogs/{logId} {
      allow read: if request.auth.token.isAdmin == true;
      allow create: if true; // Allows server-side logging
      allow update, delete: if request.auth.token.isAdmin == true;
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}